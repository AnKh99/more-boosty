{
    "name": "More Boosty",
    "version": "0.0.0",
    "description": "Helper extension for Boosty",
    "homepage_url": "https://boosty.to/cjmaxik",
    "manifest_version": 3,
    "minimum_chrome_version": "100",
    "default_locale": "en",
    "icons": {
        "128": "icon.png"
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://boosty.to/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://boosty.to/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "options_ui": {
        "browser_style": true,
        "page": "options.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}